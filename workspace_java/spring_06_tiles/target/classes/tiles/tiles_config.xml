<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
"-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
"http://tiles.apache.org/dtds/tiles-config_2_0.dtd">
<tiles-definitions>
	
	<!-- baseLayout은 임의로 작성한 이름이라 바꿔도 ok -->
	<definition name="baseLayout" template="/WEB-INF/views/layout/layout.jsp">
		<put-attribute name="header" value="/WEB-INF/views/common/header.jsp" />
		<put-attribute name="side" value="/WEB-INF/views/common/side.jsp" />
		<put-attribute name="footer" value="/WEB-INF/views/common/footer.jsp" />
		<put-attribute name="title" value="title-text" />
	</definition>
	
	<!-- contents만 있는 경우 -->
	<definition name="baseLayout2" template="/WEB-INF/views/layout/layout.jsp2">
	</definition>

	<definition name="seven" extends="baseLayout">
		<put-attribute name="content" value="/WEB-INF/views/content/sknights.jsp" />
	</definition>
	<definition name="mabi" extends="baseLayout">
		<put-attribute name="content" value="/WEB-INF/views/content/mabi.jsp" />
	</definition>
	
	<definition name="*.tiles" extends="baseLayout">
		<put-attribute name="content" value="/WEB-INF/views/content/{1}.jsp" />
	</definition>
	<definition name="*/*.tiles" extends="baseLayout">
		<put-attribute name="content" value="/WEB-INF/views/content/{1}/{2}.jsp" />
	</definition>
	
	<definition name="이름" extends="baseLayout2">
		<put-attribute name="content" value="/WEB-INF/views/content/jsp_fileName.jsp" />
	</definition>

</tiles-definitions>